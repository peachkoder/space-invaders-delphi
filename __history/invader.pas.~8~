unit invader;

interface

uses Drawable
    , Frame
    , Vcl.ExtCtrls
    , System.Classes
    ;

type

  TInvader = record
    X, Y  : UInt32;
    Point : UInt16;
  end;

  TInvaders = class(TInterfacedObject, IDrawable<TFrame>)
  strict private
    FArmy: TList;
    FTotal_Count: Uint16;
    FMove_Timer: TTimer;
    FDirection: Cardinal;
  public
      constructor Create;
      procedure Draw(Item: TFrame);
      function IsAllKilled() : Boolean;
      function IskillInvaderAt() : Boolean;
      property Army: TList read FArmy;
      property TotalCount: UInt16 read FTotal_Count write FTotal_Count;
  end;

implementation

end.
